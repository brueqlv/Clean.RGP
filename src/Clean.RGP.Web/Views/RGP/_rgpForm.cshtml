@using Microsoft.AspNetCore.Mvc.Rendering
@using Clean.RGP.Core.Enums
@using Microsoft.AspNetCore.Mvc.TagHelpers

@model Clean.RGP.Core.PersonAggregate.Person

@{
    var landProperties = Model?.LandProperties ?? new List<LandProperty>();
}

<div class="person">

    <div class="form-group">
        <label asp-for="Name">Vārds, uzvārds / Kompanijas nosaukums</label>
        <input asp-for="Name" class="form-control" required />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="PersonalCodeOrRegistrationNumber">Personas kods / Reģistrācijas numurs</label>
        <input asp-for="PersonalCodeOrRegistrationNumber" class="form-control" required />
        <span asp-validation-for="PersonalCodeOrRegistrationNumber" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="PersonType">Personas tips</label>
        @{
            var personTypeEnumValues = Enum.GetValues(typeof(Enums.PersonTypeEnum))
            .Cast<Enums.PersonTypeEnum>()
            .Select(e => new SelectListItem
            {
                Text = e.GetDescription(),
                Value = ((int)e).ToString()
            });
        }
        @Html.DropDownListFor(model => model.PersonType, new SelectList(personTypeEnumValues, "Value", "Text", Model?.PersonType), new { @class = "form-control" })
        <span asp-validation-for="PersonType" class="text-danger"></span>
        <span asp-validation-for="LandProperties" class="text-danger"></span>
    </div>

    <button type="button" class="btn btn-secondary" id="add-property">Pievienot zemes īpašumu</button>

    <div id="property-list" class="list">
        @if (landProperties != null)
        {
            for (int i = 0; i < landProperties.Count; i++)
            {
                var landProperty = landProperties[i];
                if (landProperty != null)
                {
                    <div class="property-entry">
                        <div class="form-group">
                            <label asp-for="@landProperty.Name">Īpašuma nosaukums</label>
                            <input asp-for="@landProperty.Name" class="form-control" required />
                            <span asp-validation-for="@landProperty.Name" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="@landProperty.CadastralMark">Kadastra numurs</label>
                            <input asp-for="@landProperty.CadastralMark" class="form-control" required />
                            <span asp-validation-for="@landProperty.CadastralMark" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="@landProperty.Status">Status</label>
                            @{
                                var statusEnumValues = Enum.GetValues(typeof(Enums.PropertyStatusEnum))
                                .Cast<Enums.PropertyStatusEnum>()
                                .Select(e => new SelectListItem
                        {
                            Text = e.GetDescription(),
                            Value = ((int)e).ToString()
                        });
                            }
                            @Html.DropDownListFor(model => landProperty.Status, new SelectList(statusEnumValues, "Value", "Text", landProperty.Status), new { @class = "form-control" })
                            <span asp-validation-for="@landProperty.Status" class="text-danger"></span>
                            <span asp-validation-for="@landProperty.Plots" class="text-danger"></span>
                        </div>

                        <button type="button" class="btn btn-danger btn-sm" onclick="removeEntry(this)">Remove</button>
                        <button type="button" class="btn btn-secondary" onclick="addPlot(this)">Pievienot zemes gabalu</button>

                        <div id="plot-list-@i" class="list plot-list">
                            @if (landProperty.Plots != null)
                            {
                                string today = DateTime.Today.ToString("yyyy-MM-dd");
                                for (int j = 0; j < landProperty.Plots.Count; j++)
                                {
                                    var plot = landProperty.Plots[j];
                                    if (plot != null)
                                    {
                                        <div class="plot-entry">
                                            <div class="form-group">
                                                <label asp-for="@plot.CadastralMark">Kadastra numurs</label>
                                                <input asp-for="@plot.CadastralMark" class="form-control" required />
                                                <span asp-validation-for="@plot.CadastralMark" class="text-danger"></span>
                                            </div>

                                            <div class="form-group">
                                                <label asp-for="@plot.TotalAreaInHectares">Kopplatība hektāros</label>
                                                <input type="number" step="0.01" min="0" asp-for="@plot.TotalAreaInHectares" class="form-control" required />
                                                <span asp-validation-for="@plot.TotalAreaInHectares" class="text-danger"></span>
                                            </div>

                                            <div class="form-group">
                                                <label asp-for="@plot.DateOfSurvey">Uzmērīšanas datums</label>
                                                <input asp-for="@plot.DateOfSurvey" type="date" class="form-control date-input" max="@today" required />
                                                <span asp-validation-for="@plot.DateOfSurvey" class="text-danger"></span>
                                                <span asp-validation-for="@plot.LandTypes" class="text-danger"></span>
                                            </div>

                                            <button type="button" class="btn btn-danger btn-sm" onclick="removeEntry(this)">Remove</button>
                                            <button type="button" class="btn btn-secondary" onclick="addLandType(this)">Pievienot zemes lietojumu</button>

                                            <div id="land-type-list-@i-@j" class="list land-type-list">
                                                @if (plot.LandTypes != null)
                                                {
                                                    for (int k = 0; k < plot.LandTypes.Count; k++)
                                                    {
                                                        var landType = plot.LandTypes[k];
                                                        if (landType != null)
                                                        {
                                                            <div class="type-entry">
                                                                <div class="form-group">
                                                                    <label asp-for="@landType.Type">Lietojums</label>
                                                                    @{
                                                                        var landTypeEnumValues = Enum.GetValues(typeof(Enums.LandTypeEnum))
                                                                        .Cast<Enums.LandTypeEnum>()
                                                                        .Select(e => new SelectListItem
                                                {
                                                    Text = e.GetDescription(),
                                                    Value = ((int)e).ToString()
                                                });
                                                                    }
                                                                    @Html.DropDownListFor(model => landType.Type, new SelectList(landTypeEnumValues, "Value", "Text", landType.Type), new { @class = "form-control" })
                                                                    <span asp-validation-for="@landType.Type" class="text-danger"></span>
                                                                </div>

                                                                <div class="form-group">
                                                                    <label asp-for="@landType.AreaInHectares">Platība hektāros</label>
                                                                    <input type="number" step="0.01" min="0" asp-for="@landType.AreaInHectares" class="form-control" required />
                                                                    <span asp-validation-for="@landType.AreaInHectares" class="text-danger"></span>
                                                                </div>

                                                                <button type="button" class="btn btn-danger btn-sm" onclick="removeEntry(this)">Remove</button>
                                                            </div>
                                                        }
                                                    }
                                                }
                                            </div>
                                        </div>
                                    }
                                }
                            }
                        </div>
                    </div>
                }
            }
        }
    </div>
</div>
